<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="Theme.TempStructure" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="android:statusBarColor">@color/black</item>
    </style>

    <style name="TopBarIcon">
        <item name="android:layout_width">@dimen/_40dp</item>
        <item name="android:layout_height">@dimen/_40dp</item>
    </style>

    <style name="LightTextRoboto">
        <item name="android:textSize">@dimen/_9sp</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:fontFamily">@font/roboto_light_300</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="RegularTextRoboto">
        <item name="android:textSize">@dimen/_14sp</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:fontFamily">@font/roboto_regular_400</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="MediumTextRoboto">
        <item name="android:textSize">@dimen/_16sp</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:fontFamily">@font/roboto_medium_500</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="BoldTextRoboto">
        <item name="android:textSize">@dimen/_18sp</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:fontFamily">@font/roboto_bold_700</item>
        <item name="android:textColor">@color/black</item>
    </style>

</resources>